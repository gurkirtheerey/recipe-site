<div class="card small-change" style="width: 20rem; border-radius: 25px; margin-top: 25px;">
  <img class="images" src=" {{ link }} " alt="{{ alt }}" onclick={{ action 'test' }}>
  <div class="card-body">
    <p class="card-title" style="font-size: 20px; line-height: 10px;"> {{ name }} </p>
    <p class="card-footer" style="font-size: 15px; border-radius: 15px;"> {{ description }}
    </p>
    <a href="http://localhost:4200/recipe" class="btn btn-primary"
      style="height: 40px; width: 122px; font-size: 12px; border-radius: 20px;">Click To See More! :) </a>
  </div>
</div>
